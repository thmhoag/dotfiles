{
  "languageserver": {
    "golang": {
      "enable": true,
      "command": "gopls",
      "settings": {
         "wantCompletionDocumentation": true
      },
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}
